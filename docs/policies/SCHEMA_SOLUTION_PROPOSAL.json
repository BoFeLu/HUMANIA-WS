{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://humania.local/schemas/solution_proposal.v0.1.json",
  "title": "SolutionProposal",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "proposal_id",
    "op_id",
    "created_at_utc",
    "target_phase",
    "action",
    "policy_refs",
    "risk",
    "summary"
  ],
  "properties": {
    "proposal_id": { "type": "string", "format": "uuid" },
    "op_id": { "type": "string", "format": "uuid" },
    "created_at_utc": { "type": "string", "format": "date-time" },

    "target_phase": {
      "type": "string",
      "enum": ["PLAN", "VALIDATE", "EXECUTE_REQUEST", "VERIFY", "CLOSE"]
    },

    "action": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "args"],
      "properties": {
        "name": { "type": "string", "minLength": 1, "maxLength": 96 },
        "args": {
          "type": "object",
          "additionalProperties": {
            "type": ["string", "number", "integer", "boolean", "null"]
          }
        },
        "script_path": { "type": "string", "minLength": 1, "maxLength": 260 }
      }
    },

    "policy_refs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "version"],
        "properties": {
          "name": { "type": "string", "minLength": 1, "maxLength": 128 },
          "version": { "type": "integer", "minimum": 1 }
        }
      }
    },

    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "artifacts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["path", "sha256"],
            "properties": {
              "path": { "type": "string", "minLength": 1, "maxLength": 320 },
              "sha256": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
              "bytes": { "type": "integer", "minimum": 0 }
            }
          }
        }
      }
    },

    "risk": {
      "type": "object",
      "additionalProperties": false,
      "required": ["level", "assumptions"],
      "properties": {
        "level": { "type": "string", "enum": ["LOW", "MED", "HIGH", "CRITICAL"] },
        "assumptions": {
          "type": "array",
          "maxItems": 10,
          "items": { "type": "string", "minLength": 1, "maxLength": 160 }
        }
      }
    },

    "summary": { "type": "string", "minLength": 1, "maxLength": 240 }
  }
}